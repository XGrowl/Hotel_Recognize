        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/qmui_config_color_gray_6"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:id="@+id/call_shop_linear">
            <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cell_shop_image"
                android:src="@drawable/icon_baby"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="问问店家"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/call_shop_linear"
            android:layout_above="@+id/discount_amount_text"
            android:text="当前支付:"
            android:id="@+id/hotel_pay_text"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hotel_pay_account"
            android:layout_toRightOf="@+id/hotel_pay_text"
            android:text="$123"
            android:textSize="20dp"
            android:layout_alignBottom="@+id/hotel_pay_text"
            android:textColor="@color/yellow_text"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/discount_amount_text"
            android:text="已减"
            android:layout_toRightOf="@+id/call_shop_linear"
            android:layout_alignBottom="@+id/call_shop_linear"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/discount_amount_text"
            android:text="$0"
            android:layout_alignBottom="@+id/discount_amount_text"
            android:id="@+id/discount_amount"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/order_detail_text"
                android:text="每晚明细"
                android:layout_marginEnd="5dp"
                android:layout_toLeftOf="@id/confirm_payment_order_btn"
                android:layout_centerVertical="true"
                android:textColor="@color/qmui_config_color_50_blue"/>
        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/confirm_payment_order_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:padding="10dp"
            app:qmui_radius="3dp"
            android:text="提交订单"
            android:textSize="20dp"
            android:layout_alignParentEnd="true"
            android:textColor="@color/white"
            app:qmui_borderColor="@color/light_green_btn_color" />
